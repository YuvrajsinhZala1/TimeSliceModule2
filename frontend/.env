# API Configuration
REACT_APP_API_URL=http://localhost:5000/api

# App Configuration
REACT_APP_APP_NAME=TimeSlice
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Debug and Logging Configuration
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_ERROR_LOGGING_URL=

# Development Settings
REACT_APP_MOCK_API=false
REACT_APP_API_TIMEOUT=15000

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_AUTO_RETRY=true
REACT_APP_MAX_RETRY_ATTEMPTS=3

# Authentication Settings
REACT_APP_TOKEN_STORAGE_KEY=token
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# UI/UX Settings
REACT_APP_LOADING_TIMEOUT=30000
REACT_APP_TOAST_DURATION=5000

# Performance Settings
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=300000

# Optional: External Services (for future use)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_BUILD_DATE=
FAST_REFRESH=true

# Development Tools
REACT_APP_SHOW_API_LOGS=true
REACT_APP_SHOW_PERFORMANCE_METRICS=false

# CORS and Security
REACT_APP_ALLOW_CREDENTIALS=false
REACT_APP_CORS_ENABLED=true

# Optional: PWA Settings
REACT_APP_ENABLE_PWA=false
REACT_APP_PWA_CACHE_NAME=timeslice-cache

# Error Boundaries
REACT_APP_ENABLE_ERROR_BOUNDARY=true
REACT_APP_ERROR_BOUNDARY_FALLBACK=true